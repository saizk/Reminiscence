<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPhotoViewActivity">

    <ImageView
        android:id="@+id/PickImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:background="@android:color/black"
        android:scaleType="centerCrop"></ImageView>

    <Button
        android:id="@+id/PickImageButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/PickImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Pick an image"></Button>

    <EditText
        android:id="@+id/InputName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/PickImageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:hint="Please input name" />



    <Button
        android:id="@+id/saveImageButton"
        android:layout_width="299dp"
        android:layout_height="91dp"
        android:layout_below="@id/InputName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="Save photo"></Button>


</RelativeLayout>